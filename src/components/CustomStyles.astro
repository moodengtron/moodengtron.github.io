---
import '@fontsource/luckiest-guy';
import '@fontsource/rubik';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Rubik', sans-serif;
    --aw-font-serif: 'Rubik', sans-serif;
    --aw-font-heading: 'Luckiest Guy', system-ui;

    --aw-color-primary: rgb(60, 31, 0);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(12, 41, 232);

    --aw-color-text-heading: rgb(255, 255, 255);
    --aw-color-text-default: rgb(255, 255, 255);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
